<h1>New game</h1>
<ul>
  <% @grid.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
<% @start_time = Time.now %>
</ul>
<p>What is the longest word you can find?</p>
<form action="show_result" method="post">
  <input type="text" name="attempt">
  <input type="submit" value="Enter">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid,  "#{@grid}" %>
